<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="PrimaryButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/gray_100</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingEnd">@dimen/small_margin</item>
        <item name="android:paddingRight">@dimen/small_margin</item>
        <item name="android:paddingStart">@dimen/small_margin</item>
        <item name="android:paddingLeft">@dimen/small_margin</item>
    </style>

</resources>
